---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import presentation from "../data/presentation";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta
      name="description"
      content={"Hi I'am Slimane Sedrati," + presentation.description}
    />
    <title>{title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&family=Space+Grotesk:wght@300;400;500;600&family=Syne+Mono&display=swap");
      html,
      body {
        height: 100%;
      }
      
      /* Hide scrollbar for Chrome, Safari and Opera */
      html::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      html {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
    </style>
  </head>
  <body class="bg-black min-h-screen text-white flex flex-col font-replicate">
    <Navbar />
    <main class="container flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
